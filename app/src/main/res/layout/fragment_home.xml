<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_blur">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="75dp">

            <ImageView
                android:id="@+id/profilepict"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile_pict"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20dp" />

            <LinearLayout
                android:id="@+id/greetingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/profilepict"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello, Good Morning"
                    android:fontFamily="@font/dm_sans"
                    android:textSize="15sp"
                    android:textColor="#3a4750"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sophia!"
                    android:fontFamily="@font/dm_sans_medium"
                    android:textColor="#191919"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/notification"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/notif"
                app:layout_constraintTop_toTopOf="@id/profilepict"
                app:layout_constraintBottom_toBottomOf="@id/profilepict"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="20dp" />

            <LinearLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/greetingText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/searchbar_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans_medium"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#303841"
                    android:layout_marginTop="@dimen/cardview_default_elevation"
                    android:text="Search"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/search_bar">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginHorizontal="35dp"
                    android:src="@drawable/rectangle"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/exercise_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/girl_stretch"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/search_bar"
                        tools:ignore="NotSibling" />

                    <LinearLayout
                        android:id="@+id/exercise_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/exercise_image"
                        app:layout_constraintTop_toTopOf="@id/exercise_image"
                        app:layout_constraintBottom_toBottomOf="@id/exercise_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="-90dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="184dp"
                            android:layout_height="match_parent"
                            android:textStyle="normal"
                            android:maxLines="2"
                            android:fontFamily="@font/bebas_neue"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="Fit Young Woman Doing
                                           Battle Stretch  Training"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="115dp"
                            android:layout_height="35dp"
                            android:layout_margin="15dp"
                            android:padding="5dp"
                            android:background="@drawable/rectangle2"
                            android:text="Start Exercise"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/dm_sans_bold"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/barbel"
                        app:layout_constraintBottom_toBottomOf="@id/exercise_image"
                        app:layout_constraintStart_toStartOf="@id/exercise_text"
                        android:layout_marginStart="30dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/frame_exercise"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebas_neue"
                    android:text="Select Your Goal"
                    android:textAllCaps="true"
                    android:textColor="#191919"
                    android:layout_marginBottom="10dp"
                    android:textSize="25sp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goal1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loose Weight"
                            android:fontFamily="@font/montserrat_regular"
                            android:background="@drawable/yourgoal_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textSize="13sp"
                            android:textColor="#303841"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:id="@+id/goal2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gain Weight"
                            android:fontFamily="@font/montserrat_regular"
                            android:background="@drawable/yourgoal_click_bg"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/white"
                            android:layout_marginHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/goal3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Body Building"
                            android:fontFamily="@font/montserrat_regular"
                            android:background="@drawable/yourgoal_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textColor="#303841"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/goal4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healthy"
                            android:fontFamily="@font/montserrat_regular"
                            android:background="@drawable/yourgoal_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textColor="#303841"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/goal5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Strength Training"
                            android:fontFamily="@font/montserrat_regular"
                            android:background="@drawable/yourgoal_bg"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textColor="#303841"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/goal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue"
                        android:text="Category"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="See all"
                        android:layout_marginRight="20dp"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="end" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cat1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yoga"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cat2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gym"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cat3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cardio"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cat4"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Strecth"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cat1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Body"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cat3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aerobics"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/popular_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/category"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue"
                        android:text="Popular Exercise"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="See all"
                        android:textColor="#191919"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>








            <LinearLayout
                android:id="@+id/meal_plans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/popular_exercise"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue"
                        android:text="Meal Plans"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="See all"
                        android:gravity="end"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/meal1"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Greek Salad with Lettuce, Green Onion"
                        android:fontFamily="@font/montserrat_regular"
                        android:textStyle="bold"
                        android:textColor="#191919"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 kcal"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:textColor="#303841"/>

                </LinearLayout>

                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/meal2"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salad of Fresh Vegetables"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="#191919"
                        android:fontFamily="@font/montserrat_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="270 kcal"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:textColor="#303841"/>

                </LinearLayout>

                <View
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/additional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/meal_plans"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue"
                        android:text="Additional Exercise"
                        android:textAllCaps="true"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="See all"
                        android:gravity="end"
                        android:textColor="#191919"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/addImage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_1"
                        android:background="@drawable/add1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <TextView
                        android:id="@+id/add1TV"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Exercise with Jumping Rope"
                        android:textColor="#191919"
                        android:fontFamily="@font/montserrat_regular"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:maxLines="2"
                        app:layout_constraintStart_toEndOf="@id/addImage1"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <LinearLayout
                        android:id="@+id/add1_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add1TV"
                        app:layout_constraintStart_toStartOf="@id/add1TV"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/calories"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="110 kcal"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12sp"
                            android:textColor="#303841"/>

                        <View
                            android:layout_marginHorizontal="10dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#707070"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/time"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 min"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12sp"
                            android:textColor="#303841"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginner"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp"
                        android:textColor="#303841"
                        app:layout_constraintTop_toBottomOf="@id/add1_desc"
                        app:layout_constraintStart_toStartOf="@id/add1_desc"/>

                    <View
                        android:id="@+id/divider1"
                        android:layout_marginVertical="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"
                        app:layout_constraintTop_toBottomOf="@id/addImage1"/>


                    <ImageView
                        android:id="@+id/addImage2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/add_2"
                        android:background="@drawable/add2"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/addImage1"
                        app:layout_constraintDimensionRatio="1:1"
                        android:cropToPadding="true"
                        />

                    <TextView
                        android:id="@+id/add2TV"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Exercise with Holding Jumping Rope"
                        android:textColor="#191919"
                        android:fontFamily="@font/montserrat_regular"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:maxLines="2"
                        app:layout_constraintStart_toEndOf="@id/addImage2"
                        app:layout_constraintTop_toTopOf="@id/addImage2"
                        />

                    <LinearLayout
                        android:id="@+id/add2_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add2TV"
                        app:layout_constraintStart_toStartOf="@id/add2TV"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/calories"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="135 kcal"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12sp"
                            android:textColor="#303841"/>

                        <View
